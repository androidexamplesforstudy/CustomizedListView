<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/bwt_bialko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_marginStart="18dp"
            android:layout_marginTop="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
             />

        <TextView
            android:text="@string/bwt_tluszcz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:id="@+id/textView3"
            android:layout_alignStart="@+id/textView2" />

        <TextView
            android:text="@string/kalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="27dp"
            android:id="@+id/textView4"
            android:layout_above="@+id/textView2"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="@string/kalorie_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textSize="30sp"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignEnd="@+id/textView4" />

        <TextView
            android:text="@string/bwt_bialko_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:layout_marginStart="25dp"
            android:id="@+id/textView6" />

        <TextView
            android:text="@string/bwt_weglowodany_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_alignStart="@+id/textView6"
            android:id="@+id/textView7" />

        <TextView
            android:text="@string/bwt_tluszcz_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:id="@+id/textView8" />

        <TextView
            android:text="@string/bwt_weglowodany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_below="@+id/textView"
            android:layout_alignStart="@+id/textView" />
    </RelativeLayout>
</LinearLayout>
